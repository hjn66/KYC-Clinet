<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.areatak.saderat"
    android:versionCode="1"
    android:versionName="1.0"
    android:installLocation="auto" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:supportsRtl = "true"
        android:icon="@drawable/saderat_logo"
        android:theme="@style/Theme.AppCompat" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts"
            />

        <activity
            android:name="com.areatak.saderat.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.Launcher">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.areatak.saderat.BarcodeCaptureActivity"
            android:label="Read Barcode"/>
        <activity android:name="com.areatak.saderat.Setting"
            android:label="Setting"/>

        <activity android:name="com.areatak.saderat.Login"
            android:label="Login"/>
        <activity android:name="com.areatak.saderat.LoginEdit"
            android:label="Edit Information &amp; Login"/>
        <activity
            android:name="com.areatak.saderat.Account"
            android:label="Account" />
    </application>

</manifest>